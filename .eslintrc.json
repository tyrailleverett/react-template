{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard-with-typescript",
        "prettier",
        "plugin:react-hooks/recommended",
        "plugin:import/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react", "vitest", "jsx-a11y"],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "quotes": ["error", "double"],
        "react/jsx-one-expression-per-line": "off"
    }
}
